<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoviesCatalog.Views.SettingsPage"
             xmlns:local="clr-namespace:MoviesCatalog;assembly=MoviesCatalog">
    <ContentPage.Content>
        <StackLayout>
        <TableView>
                <TableSection Title="{local:Translate ChangeLanguage}">
                <ViewCell>
                    <Picker SelectedIndexChanged="language_picker_SelectedIndexChanged" x:Name="language_picker" HorizontalOptions="CenterAndExpand">
                            <Picker.Items>
                            <x:String>ru</x:String>
                            <x:String>en</x:String>
                            <x:String>fr</x:String>
                        </Picker.Items>
                    </Picker>
                </ViewCell>
            </TableSection>
        </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>